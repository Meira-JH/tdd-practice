{
  "root": true,
  "extends": ["eslint:recommended", "next/core-web-vitals"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "12",
    "sourceType": "module"
  },
  "plugins": ["react", "unused-imports"],
  "ignorePatterns": [".next", ".husky", "node_modules", "generators", "*.hbs"],
  "rules": {
    "react/prop-types": "off",
    "no-shadow": "off",
    "no-undef": "off",
    "unused-imports/no-unused-imports": "error"
  }
}
